# API Configuration
API_KEY=your-secret-key-here
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tennis_predictor
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Model Configuration
MODEL_PATH=ml-service/models/tennis_ensemble_model.joblib
FEATURE_PATH=ml-service/models/feature_names.joblib

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=ml-service/logs/api.log

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
CACHE_DIR=ml-service/cache

# External APIs (Optional)
SPORTRADAR_API_KEY=your-sportradar-api-key
API_TENNIS_KEY=your-api-tennis-key

# Model Updater Configuration
UPDATE_FREQUENCY=daily
UPDATE_TIME=00:00
PERFORMANCE_THRESHOLD=0.7
MIN_SAMPLES=1000
MODEL_BACKUP=true
MAX_BACKUPS=5

# Email Alert Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
ALERT_FROM_EMAIL=your-email@gmail.com
ALERT_TO_EMAIL=alerts@your-domain.com

# Data Collection Configuration
MAX_RETRIES=3
DELAY_BETWEEN_REQUESTS=2
USER_AGENT_ROTATION=true

# Proxy Configuration (Optional)
PROXY_LIST=proxy1.example.com:8080,proxy2.example.com:8080
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# User Agent Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36 